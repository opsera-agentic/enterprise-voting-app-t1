# Worker Service Dockerfile - Cloud Database Ready
# Generated by Opsera Code-to-Cloud v0.6

FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build

ARG TARGETPLATFORM
ARG TARGETARCH

WORKDIR /source

# Copy csproj and restore dependencies
COPY worker/*.csproj ./
RUN dotnet restore -a $TARGETARCH

# Copy everything else and build
COPY worker/ ./
RUN dotnet publish -c release -o /app -a $TARGETARCH --self-contained false --no-restore

# Runtime stage
FROM mcr.microsoft.com/dotnet/runtime:7.0

WORKDIR /app

# Copy published app
COPY --from=build /app .

# Environment variables for cloud database connection
# These are injected via K8s ConfigMap/Secrets
ENV DATABASE_HOST=""
ENV DATABASE_PORT="5432"
ENV DATABASE_USER="postgres"
ENV DATABASE_PASSWORD=""
ENV DATABASE_NAME="votes"
ENV REDIS_HOST=""
ENV REDIS_PORT="6379"

# Health check via file touch (worker has no HTTP endpoint)
HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
  CMD test -f /tmp/healthy || exit 1

ENTRYPOINT ["dotnet", "Worker.dll"]
